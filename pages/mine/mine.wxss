/* pages/mine/mine.wxss */

.mineContainer {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userInfo {
  display: flex;
  flex-direction: column;
  background: #eee;
  width: 100%;
  height: 400rpx;
  justify-content: center;
  align-items: center;
}

.userinfo-nickname {
  color: #d85581;
  margin-bottom: 20rpx;
}

image {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.item_img{
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
}

.item_line{
  background: #eee;
  width: 100%;
  height: 1px;
}
